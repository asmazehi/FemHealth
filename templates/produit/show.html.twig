{% extends 'baseAdmin.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">Produit</h1>
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ produit.id }}</td>
                                </tr>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ produit.Nom }}</td>
                                </tr>
                                <tr>
                                    <th>Prix</th>
                                    <td>{{ produit.Prix }}</td>
                                </tr>
                                <tr>
                                    <th>Taux_remise</th>
                                    <td>{{ produit.TauxRemise }}</td>
                                </tr>
                                <tr>
                                    <th>Categorie</th>
                                    <td>{{ produit.Categorie }}</td>
                                </tr>
                                <tr>
                                    <th>Image</th>
                                    <td>{{ produit.image }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ produit.Description }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-4">
                        <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">Back to List</a>
                        <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-primary">Edit</a>
                    </div>
                </div>
            </div>
            {{ include('produit/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
