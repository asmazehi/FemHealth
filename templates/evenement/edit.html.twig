{% extends 'baseAdmin.html.twig' %}

{% block title %}Edit Evenement{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
            color: #343a40; /* Dark gray text */
            font-family: Arial, sans-serif;
        }

        .content-container {
            background-color: #fff; /* White container background */
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Shadow effect */
        }

        .btn-primary {
            background-color: #007bff; /* Primary button color */
            color: #fff; /* Text color */
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker shade on hover */
        }

        .btn-secondary {
            background-color: #6c757d; /* Secondary button color */
            color: #fff; /* Text color */
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .btn-secondary:hover {
            background-color: #495057; /* Darker shade on hover */
        }

        /* Form styles */
        form {
            margin-bottom: 20px;
        }

        form label {
            font-weight: bold;
        }

        form input[type="text"],
        form input[type="date"] {
            width: 100%;
            padding: 8px;
            border-radius: 5px;
            border: 1px solid #ced4da; /* Light gray border */
            margin-bottom: 10px;
            box-sizing: border-box; /* Include padding in width */
        }

        form button[type="submit"] {
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="content-container">
        <h1>Edit Evenement</h1>

        {{ include('evenement/_form.html.twig', {'button_label': 'Update'}) }}

        <a href="{{ path('app_evenement_index') }}" class="btn-secondary">Back to List</a>

        {{ include('evenement/_delete_form.html.twig') }}
    </div>
{% endblock %}
