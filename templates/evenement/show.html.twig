{% extends 'baseAdmin.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: black;
            color: white;
        }

        .container {
            padding: 20px;
        }

        .card {
            background-color: black;
            border: 1px solid white;
            border-radius: 5px;
        }

        .card-header {
            background-color: #343a40;
            color: white;
            border-bottom: 1px solid white;
        }

        .card-title {
            text-align: center;
            margin-bottom: 0;
        }

        .card-body {
            padding: 20px;
        }

        .table {
            color: white;
            border: none;
        }

        .table th {
            border: none;
        }

        .table td {
            border: none;
            vertical-align: middle;
        }

        .btn {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            text-decoration: none;
        }

        .btn:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title text-center">Evenement</h1>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ evenement.id }}</td>
                                </tr>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ evenement.nom }}</td>
                                </tr>
                                <tr>
                                    <th>Date de d√©but</th>
                                    <td>{{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Date de fin</th>
                                    <td>{{ evenement.dateFin ? evenement.dateFin|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Image</th>
                                    <td>{{ evenement.image }}</td>
                                </tr>
                                <tr>
                                    <th>Localisation</th>
                                    <td>{{ evenement.localisation }}</td>
                                </tr>
                                <tr>
                                    <th>Montant</th>
                                    <td>{{ evenement.montant }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-center">
                        <a href="{{ path('app_evenement_index') }}" class="btn">Back to list</a>
                        <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ include('evenement/_delete_form.html.twig') }}
{% endblock %}
