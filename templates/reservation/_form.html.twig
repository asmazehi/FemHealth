{% block title %}Reservation index{% endblock %}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        
            <div class="mb-3 row">
                <label for="nom" class="col-sm-4 col-form-label">Paiement:</label>
                <div class="col-sm-8">
                    {{ form_widget(form.mode_paiement, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.mode_paiement) }}
                </div>
            </div>
            
            <div class="mb-3 row">
                <div class="col-sm-12 text-center">
                    <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                </div>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
