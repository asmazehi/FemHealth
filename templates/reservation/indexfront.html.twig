{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center mb-4 text-white">Reservation Index</h1>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="text-black">Id</th>
                        <th class="text-black">Statut Paiement</th>
                        <th class="text-black">Mode Paiement</th>
                    </tr>
                </thead>
                <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td class="text-black">{{ reservation.id }}</td>
                        <td class="text-black">{{ reservation.statutPaiement }}</td>
                        <td class="text-black">{{ reservation.modePaiement }}</td>
                       
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center text-black">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('app_evenement_indexFront') }}" class="btn btn-success">back to list</a>
        </div>
    </div>
</div>
{% endblock %}
