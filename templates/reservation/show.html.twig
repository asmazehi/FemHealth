{% extends 'baseAdmin.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title text-center">Reservation Details</h1>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ reservation.id }}</td>
                            </tr>
                            <tr>
                                <th>Statut Paiement</th>
                                <td>{{ reservation.statutPaiement }}</td>
                            </tr>
                            <tr>
                                <th>Mode Paiement</th>
                                <td>{{ reservation.modePaiement }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-center">
                    <a href="{{ path('app_reservation_index') }}" class="btn btn-secondary">Back to List</a>
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-primary">Edit</a>
                </div>
            </div>
        </div>
    </div>
    {{ include('reservation/_delete_form.html.twig') }}
</div>
{% endblock %}
